<h1>Ввод числа</h1>
<%unless flash[:notice].blank?%>
  <h2 style = 'color:red'><%=flash[:notice]%></h2>
<%end%>


<%= form_with url: result_path, method: :get do |form| %>
  <%= form.label :digit, 'Число' %>
  <%= form.text_field(:digit, value: "78") %>
  <%= form.submit('Отправить', id: 'palindrom-btn') %>
<% end %>

